<UserControl
    x:Class="Nuart.Modbus.TestApp.Views.Func1View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Nuart.Modbus.TestApp.Converters"
    xmlns:ctrls="clr-namespace:Nuart.Modbus.TestApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:ii="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:local="clr-namespace:Nuart.Modbus.TestApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:viewModels="clr-namespace:Nuart.Modbus.TestApp.ViewModels"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:xp="clr-namespace:XamlPearls;assembly=XamlPearls"
    Margin="15"
    d:DataContext="{d:DesignInstance viewModels:Func1ViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontSize="15"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ctrls:IntTypeConverter x:Key="IntTypeConverter" />
        <converters:HexDecPresentationConverter x:Key="HexDecPresentationConverter" />
        <converters:BoolVisibilityConverter
            x:Key="BoolVisibilityConverter"
            FalseVisibility="Hidden"
            TrueVisibility="Visible" />
        <converters:BoolVisibilityConverter
            x:Key="BoolVisibilityConverter2"
            FalseVisibility="Visible"
            TrueVisibility="Hidden" />
        <Storyboard
            x:Key="CommunicationErrorStoryboard"
            AutoReverse="False"
            RepeatBehavior="Forever">
            <DoubleAnimation
                BeginTime="0:0:0.5"
                By="0.5"
                Storyboard.TargetName="ErrorTextBlock"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.5" />
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="40" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox
            FontSize="16"
            FontWeight="Bold"
            Header="Modbus Settings">
            <Grid TextBlock.FontSize="13" TextBlock.FontWeight="Normal">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" MinWidth="120" />
                    <ColumnDefinition Width="auto" MinWidth="120" />
                    <ColumnDefinition Width="auto" MinWidth="120" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Column="0"
                    Background="Gray"
                    BorderBrush="LightGray"
                    BorderThickness="1,1,0.5,0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="Name" />
                </Border>

                <Border
                    Grid.Column="1"
                    Background="Gray"
                    BorderBrush="LightGray"
                    BorderThickness="0.5,1,0.5,0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="Current Value" />
                </Border>

                <Border
                    Grid.Column="2"
                    Background="Gray"
                    BorderBrush="LightGray"
                    BorderThickness="0.5,1,1,0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="Setpoint" />
                </Border>

                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    BorderBrush="LightGray"
                    BorderThickness="1,0.5,0.5,0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="Slave Unit" />
                </Border>

                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    BorderBrush="LightGray"
                    BorderThickness="0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding SlaveUnit, Converter={StaticResource HexDecPresentationConverter}}" />
                </Border>

                <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    BorderBrush="LightGray"
                    BorderThickness="0.5,0.5,1,0.5">
                    <TextBox
                        Name="tbxSlaveUnit"
                        Margin="5"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Text="1">
                        <i:Interaction.Behaviors>
                            <local:TextBoxValidationBehavior MaxValue="255" MinValue="1" />
                        </i:Interaction.Behaviors>
                        <i:Interaction.Triggers>
                            <i:KeyTrigger
                                Key="Return"
                                ActiveOnFocus="True"
                                FiredOn="KeyDown">
                                <xp:CallMethodAction MethodName="SetSlaveUnit" TargetObject="{Binding}">
                                    <xp:Parameter Value="{Binding ElementName=tbxSlaveUnit, Path=Text}" />
                                </xp:CallMethodAction>
                            </i:KeyTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                </Border>

                <Border
                    Grid.Row="2"
                    Grid.Column="0"
                    BorderBrush="LightGray"
                    BorderThickness="1,0.5,0.5,0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="Start Addr" />
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="1"
                    BorderBrush="LightGray"
                    BorderThickness="0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding StartAddr, Converter={StaticResource HexDecPresentationConverter}}" />
                </Border>

                <Border
                    Grid.Row="2"
                    Grid.Column="2"
                    BorderBrush="LightGray"
                    BorderThickness="0.5,0.5,1,0.5">
                    <TextBox
                        x:Name="txbStartAddr"
                        Margin="5"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center">
                        <i:Interaction.Behaviors>
                            <local:TextBoxValidationBehavior MaxValue="65535" MinValue="0" />
                        </i:Interaction.Behaviors>
                        <i:Interaction.Triggers>
                            <i:KeyTrigger
                                Key="Return"
                                ActiveOnFocus="True"
                                FiredOn="KeyDown">
                                <xp:CallMethodAction MethodName="SetStartAddr" TargetObject="{Binding}">
                                    <xp:Parameter Value="{Binding ElementName=txbStartAddr, Path=Text}" />
                                </xp:CallMethodAction>
                            </i:KeyTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                </Border>

                <Border
                    Grid.Row="3"
                    Grid.Column="0"
                    BorderBrush="LightGray"
                    BorderThickness="1,0.5,0.5,1">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="Quantity" />
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="1"
                    BorderBrush="LightGray"
                    BorderThickness="0.5,0.5,0.5,1">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding Quantity, Converter={StaticResource HexDecPresentationConverter}}" />
                </Border>

                <Border
                    Grid.Row="3"
                    Grid.Column="2"
                    BorderBrush="LightGray"
                    BorderThickness="0.5,0.5,1,0.5">

                    <TextBox
                        x:Name="txbQuantity"
                        Margin="5"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center">
                        <i:Interaction.Behaviors>
                            <local:TextBoxValidationBehavior MaxValue="2000" MinValue="1" />
                        </i:Interaction.Behaviors>
                        <i:Interaction.Triggers>
                            <i:KeyTrigger
                                Key="Return"
                                ActiveOnFocus="True"
                                FiredOn="KeyDown">
                                <xp:CallMethodAction MethodName="SetQuantity" TargetObject="{Binding}">
                                    <xp:Parameter Value="{Binding ElementName=txbQuantity, Path=Text}" />
                                </xp:CallMethodAction>
                            </i:KeyTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                </Border>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="0" Grid.Column="2">
            <TextBlock
                Name="ErrorTextBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Foreground="Red"
                Text="Communication Error"
                Visibility="{Binding IsReadSuccess, Converter={StaticResource BoolVisibilityConverter2}}">
                <i:Interaction.Triggers>
                    <i:DataTrigger
                        Binding="{Binding ElementName=ErrorTextBlock, Path=Visibility}"
                        Comparison="Equal"
                        Value="Visible">
                        <i:ControlStoryboardAction ControlStoryboardOption="Play" Storyboard="{StaticResource CommunicationErrorStoryboard}" />
                    </i:DataTrigger>

                    <i:DataTrigger
                        Binding="{Binding ElementName=ErrorTextBlock, Path=Visibility}"
                        Comparison="Equal"
                        Value="Hidden">
                        <i:ControlStoryboardAction ControlStoryboardOption="Stop" Storyboard="{StaticResource CommunicationErrorStoryboard}" />
                    </i:DataTrigger>
                </i:Interaction.Triggers>
            </TextBlock>
            <GroupBox
                FontSize="16"
                FontWeight="Bold"
                Header="Register Value Table"
                Visibility="{Binding IsReadSuccess, Converter={StaticResource BoolVisibilityConverter}}">
                <DataGrid
                    Margin="30,0,10,10"
                    HorizontalAlignment="Center"
                    d:ItemsSource="{d:SampleData}"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserSortColumns="False"
                    ItemsSource="{Binding AddrValuePairs}"
                    TextBlock.FontSize="13"
                    TextBlock.FontWeight="Normal">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding Addr}"
                            Header="Addr"
                            IsReadOnly="True" />
                        <DataGridTemplateColumn Width="150" Header="Value">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        HorizontalAlignment="Center"
                                        Focusable="False"
                                        IsChecked="{Binding Value}"
                                        IsHitTestVisible="False" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>