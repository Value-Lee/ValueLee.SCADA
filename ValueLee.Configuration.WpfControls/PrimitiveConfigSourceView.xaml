<UserControl
    x:Class="ValueLee.Configuration.WpfControls.PrimitiveConfigSourceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ValueLee.Configuration.WpfControls.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ValueLee.Configuration.WpfControls"
    xmlns:localization="clr-namespace:ValueLee.Configuration.WpfControls.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:xp="https://github.com/Value-Lee/XamlPearls"
    Name="self"
    mc:Ignorable="d">
    <UserControl.Resources>
        <xp:BindingProxy x:Key="proxy" Data="{Binding ElementName=self}" />
        <converters:IndexConverter x:Key="IndexConverter" />
        <converters:String2BoolConverter x:Key="String2BoolConverter" />
        <converters:String2ReversedBoolConverter x:Key="String2ReversedBoolConverter" />
        <converters:Value2TextConverter x:Key="Value2TextConverter" />
        <converters:ValueMatchOptionsConverter x:Key="ValueMatchOptionsConverter" />
        <converters:Bool2VisibilityConverter x:Key="Bool2VisibilityConverter" />
        <converters:MaxMinDecimal2EmptyConverter x:Key="MaxMinDecimal2EmptyConverter" />
        <local:SetpointDataTemplateSelector x:Key="SetpointDataTemplateSelector">
            <local:SetpointDataTemplateSelector.BoolTemplate>
                <DataTemplate>
                    <StackPanel
                        Margin="2"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <RadioButton
                            VerticalAlignment="Center"
                            Content="{Binding Options[0]}"
                            IsChecked="{Binding Value, Mode=OneWay, Converter={StaticResource String2BoolConverter}}"
                            IsEnabled="{Binding IsEnable}">
                            <i:Interaction.Behaviors>
                                <local:SetpointRadioButtonBehavior Value="True" />
                            </i:Interaction.Behaviors>
                        </RadioButton>
                        <RadioButton
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="{Binding Options[1]}"
                            IsChecked="{Binding Value, Mode=OneWay, Converter={StaticResource String2ReversedBoolConverter}}"
                            IsEnabled="{Binding IsEnable}">
                            <i:Interaction.Behaviors>
                                <local:SetpointRadioButtonBehavior Value="False" />
                            </i:Interaction.Behaviors>
                        </RadioButton>
                    </StackPanel>
                </DataTemplate>
            </local:SetpointDataTemplateSelector.BoolTemplate>

            <local:SetpointDataTemplateSelector.TextTemplate>
                <DataTemplate>
                    <TextBox
                        Margin="2"
                        VerticalContentAlignment="Center"
                        BorderThickness="0"
                        IsEnabled="{Binding IsEnable}"
                        Text="{Binding Value, Mode=OneTime}">
                        <i:Interaction.Behaviors>
                            <local:SetpointTextBoxBehavior DirtyBrush="{Binding Source={StaticResource proxy}, Path=Data.TextBoxTemplateDirtyBrush}" ErrorBrush="{Binding Source={StaticResource proxy}, Path=Data.TextBoxTemplateErrorBrush}" />
                        </i:Interaction.Behaviors>
                    </TextBox>
                </DataTemplate>
            </local:SetpointDataTemplateSelector.TextTemplate>

            <local:SetpointDataTemplateSelector.OptionsTemplate>
                <DataTemplate>
                    <ComboBox
                        MinWidth="100"
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding IsEnable}"
                        ItemsSource="{Binding Options, Mode=OneWay}">
                        <ComboBox.SelectedItem>
                            <MultiBinding Converter="{StaticResource ValueMatchOptionsConverter}" Mode="OneTime">
                                <Binding Path="Value" />
                                <Binding Path="Type" />
                                <Binding Path="Options" />
                            </MultiBinding>
                        </ComboBox.SelectedItem>
                        <i:Interaction.Behaviors>
                            <local:SetpointComboboxBehavior />
                        </i:Interaction.Behaviors>
                    </ComboBox>
                </DataTemplate>
            </local:SetpointDataTemplateSelector.OptionsTemplate>

            <local:SetpointDataTemplateSelector.FilePathTemplate>
                <DataTemplate>
                    <Button IsEnabled="{Binding IsEnable}">
                        <Image
                            Width="25"
                            Height="25"
                            Source="/ValueLee.Configuration.WpfControls;component/asserts/file.png" />
                        <i:Interaction.Behaviors>
                            <local:SetpointFilePathButtonBehavior />
                        </i:Interaction.Behaviors>
                    </Button>
                </DataTemplate>
            </local:SetpointDataTemplateSelector.FilePathTemplate>

            <local:SetpointDataTemplateSelector.FolderPathTemplate>
                <DataTemplate>
                    <Button IsEnabled="{Binding IsEnable}">
                        <Image
                            Width="25"
                            Height="25"
                            Source="/ValueLee.Configuration.WpfControls;component/asserts/folder.png" />
                        <i:Interaction.Behaviors>
                            <local:SetpointFolderPathButtonBehavior />
                        </i:Interaction.Behaviors>
                    </Button>
                </DataTemplate>
            </local:SetpointDataTemplateSelector.FolderPathTemplate>

            <local:SetpointDataTemplateSelector.DateTimeTemplate>
                <DataTemplate>
                    <xctk:DateTimePicker />
                </DataTemplate>
            </local:SetpointDataTemplateSelector.DateTimeTemplate>

            <local:SetpointDataTemplateSelector.ColorTemplate>
                <DataTemplate>
                    <xctk:ColorPicker />
                </DataTemplate>
            </local:SetpointDataTemplateSelector.ColorTemplate>
        </local:SetpointDataTemplateSelector>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="auto"
                MinWidth="{Binding Source={StaticResource proxy}, Path=Data.TreeViewNavigationMinWidth}"
                MaxWidth="{Binding Source={StaticResource proxy}, Path=Data.TreeViewNavigationMaxWidth}" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding ElementName=self, Path=Height}" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Column="0"
            Margin="0,0,5,0"
            Visibility="{Binding Source={StaticResource proxy}, Path=Data.IsTreeViewNavigationVisible, Converter={StaticResource Bool2VisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
                Margin="10,10,0,10"
                Orientation="Horizontal"
                Visibility="{Binding Source={StaticResource proxy}, Path=Data.IsExpandCollapseVisible, Converter={StaticResource Bool2VisibilityConverter}}">
                <Button x:Name="BtnExpandAll" Click="BtnExpandAll_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="14"
                            Height="14"
                            Margin="5,5,10,5"
                            VerticalAlignment="Center"
                            Source="/ValueLee.Configuration.WpfControls;component/asserts/expand.png" />
                        <TextBlock
                            Margin="0,5,5,5"
                            VerticalAlignment="Center"
                            Text="{localization:Translate ExpandAll}" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="BtnCollapseAll"
                    Margin="20,0,0,0"
                    Click="BtnCollapseAll_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="14"
                            Height="14"
                            Margin="5,5,10,5"
                            VerticalAlignment="Center"
                            Source="/ValueLee.Configuration.WpfControls;component/asserts/collapse.png" />
                        <TextBlock
                            Margin="0,5,5,5"
                            VerticalAlignment="Center"
                            Text="{localization:Translate CollapseAll}" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <Grid
                Grid.Row="1"
                Margin="10,0,0,10"
                Visibility="{Binding Source={StaticResource proxy}, Path=Data.IsSearchBoxVisible, Converter={StaticResource Bool2VisibilityConverter}}">
                <xctk:WatermarkTextBox
                    Name="TbxFilter"
                    HorizontalAlignment="Stretch"
                    VerticalContentAlignment="Center">
                    <xctk:WatermarkTextBox.Watermark>
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="27"
                                Height="27"
                                VerticalAlignment="Center"
                                Source="/ValueLee.Configuration.WpfControls;component/asserts/search.png"
                                Stretch="Fill" />
                            <TextBlock
                                Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                Text="{localization:Translate Search}" />
                        </StackPanel>
                    </xctk:WatermarkTextBox.Watermark>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <xp:CallMethodAction MethodName="DisplayAllNodes" TargetObject="{Binding ElementName=self}">
                                <xp:Parameter Value="{Binding ElementName=TbxFilter, Path=Text}" />
                            </xp:CallMethodAction>
                        </i:EventTrigger>
                        <i:KeyTrigger Key="Return">
                            <xp:CallMethodAction MethodName="Filter" TargetObject="{Binding ElementName=self}">
                                <xp:Parameter Value="{Binding ElementName=TbxFilter, Path=Text}" />
                            </xp:CallMethodAction>
                        </i:KeyTrigger>
                    </i:Interaction.Triggers>
                </xctk:WatermarkTextBox>
                <Image
                    x:Name="ImageClearFilterText"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    MouseDown="ImageClearFilterText_MouseDown"
                    Source="/ValueLee.Configuration.WpfControls;component/asserts/clear.png">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="1" />
                                    <Setter Property="Width" Value="21" />
                                    <Setter Property="Height" Value="21" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter Property="Opacity" Value="0.8" />
                                    <Setter Property="Width" Value="18" />
                                    <Setter Property="Height" Value="18" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Grid>

            <TreeView
                x:Name="TreeView"
                Grid.Row="2"
                ItemsSource="{Binding ElementName=self, Path=ObservableConfigNodes}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type local:ObservableConfigNode}" ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Display}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
                        <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource Bool2VisibilityConverter}}" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Grid>
        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Visibility="{Binding Source={StaticResource proxy}, Path=Data.IsTreeViewNavigationVisible, Converter={StaticResource Bool2VisibilityConverter}}" />
        <DataGrid
            x:Name="DataGrid"
            Grid.Column="2"
            Width="{Binding Source={StaticResource proxy}, Path=Data.DataGridWidth}"
            AlternatingRowBackground="AliceBlue"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            EnableRowVirtualization="False"
            ItemsSource="{Binding ElementName=TreeView, Path=SelectedItem.ConfigItems}"
            RowHeaderWidth="0">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource Bool2VisibilityConverter}}" />
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="{localization:Translate ColumnHeader_Nodot}" Visibility="{Binding Source={StaticResource proxy}, Path=Data.IsNoColumnVisible, Converter={StaticResource Bool2VisibilityConverter}}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="2"
                                VerticalAlignment="Center"
                                ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource IndexConverter}" Mode="OneWay">
                                        <Binding ElementName="DataGrid" Mode="OneWay" />
                                        <Binding
                                            Mode="OneWay"
                                            Path="DataContext"
                                            RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    MinWidth="{Binding Source={StaticResource proxy}, Path=Data.NameColumnMinWidth}"
                    MaxWidth="{Binding Source={StaticResource proxy}, Path=Data.NameColumnMaxWidth}"
                    Header="{localization:Translate ColumnHeader_Name}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="2"
                                VerticalAlignment="Center"
                                Text="{Binding Display}"
                                ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    MinWidth="{Binding Source={StaticResource proxy}, Path=Data.DescColumnMinWidth}"
                    MaxWidth="{Binding Source={StaticResource proxy}, Path=Data.DescColumnMaxWidth}"
                    Header="{localization:Translate ColumnHeader_Desc}"
                    Visibility="{Binding Source={StaticResource proxy}, Path=Data.IsDescriptionColumnVisible, Converter={StaticResource Bool2VisibilityConverter}}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="2"
                                VerticalAlignment="Center"
                                Text="{Binding Description}"
                                ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    MinWidth="{Binding Source={StaticResource proxy}, Path=Data.UnitColumnMinWidth}"
                    MaxWidth="{Binding Source={StaticResource proxy}, Path=Data.UnitColumnMaxWidth}"
                    Header="{localization:Translate ColumnHeader_Unit}"
                    Visibility="{Binding Source={StaticResource proxy}, Path=Data.IsUnitColumnVisible, Converter={StaticResource Bool2VisibilityConverter}}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="2"
                                VerticalAlignment="Center"
                                Text="{Binding Unit}"
                                ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    MinWidth="{Binding Source={StaticResource proxy}, Path=Data.MinColumnMinWidth}"
                    MaxWidth="{Binding Source={StaticResource proxy}, Path=Data.MinColumnMaxWidth}"
                    Header="{localization:Translate ColumnHeader_Min}"
                    Visibility="{Binding Source={StaticResource proxy}, Path=Data.IsMinColumnVisible, Converter={StaticResource Bool2VisibilityConverter}}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="2"
                                VerticalAlignment="Center"
                                Text="{Binding Min, Converter={StaticResource MaxMinDecimal2EmptyConverter}}"
                                ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    MinWidth="{Binding Source={StaticResource proxy}, Path=Data.MaxColumnMinWidth}"
                    MaxWidth="{Binding Source={StaticResource proxy}, Path=Data.MaxColumnMaxWidth}"
                    Header="{localization:Translate ColumnHeader_Max}"
                    Visibility="{Binding Source={StaticResource proxy}, Path=Data.IsMaxColumnVisible, Converter={StaticResource Bool2VisibilityConverter}}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="2"
                                VerticalAlignment="Center"
                                Text="{Binding Max, Converter={StaticResource MaxMinDecimal2EmptyConverter}}"
                                ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    MinWidth="{Binding Source={StaticResource proxy}, Path=Data.ValueColumnMinWidth}"
                    MaxWidth="{Binding Source={StaticResource proxy}, Path=Data.ValueColumnMaxWidth}"
                    Header="{localization:Translate ColumnHeader_Value}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="2"
                                VerticalAlignment="Center"
                                ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource Value2TextConverter}">
                                        <Binding Path="Value" />
                                        <Binding Path="Options" />
                                        <Binding Path="Type" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    MinWidth="{Binding Source={StaticResource proxy}, Path=Data.SetpointColumnMinWidth}"
                    MaxWidth="{Binding Source={StaticResource proxy}, Path=Data.SetpointColumnMaxWidth}"
                    CellTemplateSelector="{StaticResource SetpointDataTemplateSelector}"
                    Header="{localization:Translate ColumnHeader_Setpoint}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>