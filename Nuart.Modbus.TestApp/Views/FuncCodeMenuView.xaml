<UserControl
    x:Class="Nuart.Modbus.TestApp.Views.FuncCodeMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Nuart.Modbus.TestApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xp="clr-namespace:XamlPearls;assembly=XamlPearls"
    Name="Root"
    mc:Ignorable="d">
    <Grid>
        <ListBox ItemsSource="{Binding FuncCodeMenus}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button
                        MinWidth="150"
                        Padding="0,5,0,5"
                        Content="{Binding}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <xp:CallMethodAction MethodName="RequestNavigation" TargetObject="{Binding ElementName=Root, Path=DataContext}">
                                    <xp:Parameter Value="{Binding}" />
                                </xp:CallMethodAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
